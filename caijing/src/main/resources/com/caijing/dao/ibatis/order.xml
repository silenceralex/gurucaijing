  </update>
  <update id="update" parameterClass="Order" >
    update order
    set userid = #userid:BIGINT#,
      cost = #cost:REAL#,
      status = #status:TINYINT#,
      ctime = #ctime:TIMESTAMP#,
      lmodify = #lmodify:TIMESTAMP#
    where orderid = #orderid:BIGINT#
